<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.f5onz.applicationprojet.GridFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un exemple d'utilisation d'un GridLayout"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:columnCount="2"
            android:rowCount="4">

            <View
                android:id="@+id/firstView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_margin="5dp"
                android:background="@color/colorAccent" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_size"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary" />

            <View
                android:id="@+id/thirdView"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_size"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorView" />

            <View
                android:id="@+id/fourView"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_size"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorAccent" />

            <View
                android:id="@+id/fiveView"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_size"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark" />

            <View
                android:id="@+id/sixView"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_size"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:background="@color/colorView2" />
        </GridLayout>

    </LinearLayout>

</FrameLayout>
